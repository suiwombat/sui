load("@prelude//toolchains:genrule.bzl", "system_genrule_toolchain")
load("@prelude//toolchains:rust.bzl", "system_rust_toolchain")
load("@prelude//toolchains:go.bzl", "system_go_toolchain")
load("@prelude//toolchains:cxx.bzl", "system_cxx_toolchain")
load(
    "@prelude//toolchains:python.bzl",
    "system_python_bootstrap_toolchain",
    "system_python_toolchain",
)
load("@prelude-mysten//toolchains:podman.bzl", "system_podman_toolchain")
load("@prelude-mysten//toolchains:mypkg.bzl", "system_mypkg_toolchain")


system_genrule_toolchain(
    name="genrule",
    visibility=["PUBLIC"],
)

system_rust_toolchain(
    name="rust",
    default_edition="2021",
    visibility=["PUBLIC"],
)

system_go_toolchain(
    name="go",
    go_root="/usr/local/go/bin",
    visibility=["PUBLIC"],
)

system_cxx_toolchain(
    name="cxx",
    linker=select(
        {
            "config//os:macos": "clang++",
            "config//os:linux": "clang++",
        }
    ),
    visibility=["PUBLIC"],
)

system_python_bootstrap_toolchain(
    name="python_bootstrap",
    visibility=["PUBLIC"],
)

system_python_toolchain(
    name="python",
    visibility=["PUBLIC"],
)

system_podman_toolchain(
    name="podman",
    # TODO something else than this...
    # this is symlinked from a local go install
    builder="/opt/homebrew/bin/podman",
    visibility=["PUBLIC"],
)

system_mypkg_toolchain(
    name="mypkg",
    # TODO something else than this...
    # this is symlinked from a local go install
    bin="/usr/local/bin/mypkg",
    visibility=["PUBLIC"],
)
